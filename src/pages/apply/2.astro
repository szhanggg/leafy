---
import PageLayout from "../../components/PageLayout.astro";
import ApplyLayout from "../../components/ApplyLayout.astro";
import { jobs } from "../../websiteInfo";

const inputs = [
  "First Name",
  "Last Name",
  "Pronouns",
  "Email",
  "Phone Number",
  "Address Line 1",
  "Address Line 2",
  "City",
  "State",
  "Zip Code",
];

const inputNames = [
  "First Name",
  "Last Name",
  "Pronouns",
  "Email",
  "Phone Number",
  "Address Line 1",
  "Address Line 2",
  "City",
  "State",
  "Zip Code",
];

const required = [
  "First Name",
  "Last Name",
  "Pronouns",
  "Email",
  "Phone Number",
  "Address Line 1",
  "City",
  "State",
  "Zip Code",
];
---

<PageLayout>
  <ApplyLayout>
    <div class="shadow-lg">
      <div
        class="flex-col bg-tertiary items-center justify-center text-center py-16 rounded-t-lg"
      >
        <h1 class="text-3xl font-semibold">Leafy Application</h1>
      </div>
      <form id="appForm">
        <div
          class="flex-col bg-card items-center md:items-start px-4 md:px-20 py-12"
        >
          <h2 class="text-2xl text-primary mb-4">
            Position<em class="text-xs not-italic text-red-500"> *</em>
          </h2>

          <select
            id="Position"
            name="Position"
            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2 mb-4"
            required
          >
            <option value=""></option>
            {
              jobs.map((job) => (
                <option id={job.id} value={job.id}>
                  {job.name}
                </option>
              ))
            }
          </select>
          <h2 class="text-2xl text-primary mb-4">Communications Coordinator</h2>
          <div class="grid md:grid-cols-2 md:gap-x-16">
            {
              inputs.map((input, index) => (
                <fragment key={index}>
                  <p>
                    {input}
                    <em class="text-xs not-italic text-red-500">
                      {required.includes(input) ? "*" : ""}
                    </em>
                  </p>
                  <input
                    type="text"
                    name={inputNames[index]}
                    id={inputNames[index]}
                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2 mb-4"
                  />
                </fragment>
              ))
            }
          </div>
          <h2 class="text-2xl text-primary mb-4">Links</h2>

          <div class="grid md:grid-cols-2 md:gap-x-16">
            <div>
              <p>LinkedIn</p>
              <input
                type="text"
                id="LinkedIn"
                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2 mb-4"
              />
            </div>
            <div>
              <p>GitHub</p>
              <input
                type="text"
                id="GitHub"
                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2 mb-4"
              />
            </div>
            <div>
              <p>Other</p>
              <input
                type="text"
                id="Other"
                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2 mb-4"
              />
            </div>
          </div>
          <h2 class="text-2xl text-primary mb-4">Application Questions</h2>
          <p>
            Why are you qualifed for this job? <em
              class="text-xs not-italic text-red-500">*</em
            >
          </p>
          <textarea
            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2 mb-4 h-40"
            id="Qualifications"></textarea>
          <h2 class="text-2xl text-primary mb-4">Work Authorization</h2>
          <input
            type="checkbox"
            id="work_auth"
            name="work_auth"
            value="us_citizen"
          />
          <label for="us_citizen"
            >I am authorized to work in the U.S. <em
              class="text-xs not-italic text-red-500">*</em
            ></label
          >
          <div class="flex justify-center
          md:justify-end">
            <a
              class="bg-primary text-white rounded-md px-2
          md:px-4 py-2 text-center mt-6 inline-block shadow-lg"
            >
              <button type="submit">Submit</button>
            </a>
          </div>
        </div>
      </form>
    </div>
    <script is:inline src="/scripts/firebase.js" type="module"></script>
  </ApplyLayout>
</PageLayout>
